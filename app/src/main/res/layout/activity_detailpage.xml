<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".DetailPageActivity">
<!--TODO: set limit for long img
    TODO: make room for back bnt when img is absent
    TODO: find why renaming the separator breaks things-->
    <ImageView
        android:id="@+id/img_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/post_img_example1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_shadow"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_profile_detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:adjustViewBounds="true"
        android:background="@drawable/frame_circle"
        android:scaleType="centerInside"
        android:clipToOutline="true"
        app:circularflow_radiusInDP="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_postHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_postHeader"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_howLongAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:text="1일전"
        android:textColor="#61000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_post" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_postHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_profile_detail"
        app:layout_constraintTop_toBottomOf="@+id/img_post">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시물 제목"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E6E6E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_detail" />

    <ImageView
        android:id="@+id/ic_pinLoc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/pin_icon"
        app:layout_constraintBottom_toBottomOf="@+id/txt_loc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_loc" />

    <TextView
        android:id="@+id/txt_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="위치 정보"
        android:textColor="#61000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ic_pinLoc"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <EditText
        android:id="@+id/txt_postBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:paddingEnd="30dp"
        android:paddingBottom="12dp"
        android:text="Lorem ipsum dolor sit amet consectetur. Mi ut cum faucibus venenatis consectetur bibendum. Vitae facilisis lacus pharetra egestas enim quis hendrerit. Molestie ultrices tristique faucibus placerat. Eu eu cras at ornare tortor sapien purus sagittis commodo."
        android:textColor="#009245"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_loc" />

    <ImageButton
        android:id="@+id/btn_heart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/full_heart_icon"
        app:layout_constraintBottom_toBottomOf="@+id/txt_heartNum"
        app:layout_constraintEnd_toStartOf="@+id/txt_heartNum"
        app:layout_constraintTop_toTopOf="@+id/txt_heartNum" />

    <TextView
        android:id="@+id/txt_heartNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:inputType="number|numberDecimal|numberSigned"
        android:text="187"
        android:textColor="#61000000"
        app:layout_constraintBottom_toTopOf="@+id/btn_Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_postBody"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_Next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_nextpage"
        app:layout_constraintBottom_toTopOf="@+id/txt_next"
        app:layout_constraintEnd_toEndOf="@+id/txt_next"
        app:layout_constraintStart_toStartOf="@+id/txt_next" />

    <TextView
        android:id="@+id/txt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:text="다음 게시물"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_pre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:rotation="180"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_nextpage"
        app:layout_constraintBottom_toTopOf="@+id/txt_pre"
        app:layout_constraintEnd_toEndOf="@+id/txt_pre"
        app:layout_constraintStart_toStartOf="@+id/txt_pre" />

    <TextView
        android:id="@+id/txt_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="24dp"
        android:text="이전 게시물"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>